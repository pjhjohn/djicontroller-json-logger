<% if JSON.parse(data).empty? %>
  <h2>Empty Data</h2>
<% else %>
  <canvas id="<%= title %>_chart"></canvas>
  <script>
  {
    const ctx = document.getElementById('<%= title %>_chart').getContext('2d');
    const listByKey = (key) => data.map(obj => obj[key]);
    const data = <%= raw data %>;
    const keys = <%= raw keys %>;
    const labels = {
      x: "PositionX",
      y: "PositionY",
      z: "PositionZ",
      r: "Yaw",
      dx: "BodyVelocityX",
      dy: "BodyVelocityY",
      dz: "BodyVelocityZ",
      w: "BodyAngVelocityYaw",
      roll: "Roll",
      pitch: "Pitch",
      throttle: "Throttle",
      yaw: "Yaw",
      white: "#fff",
    }
    const colors = {
      x: "rgb(255, 127, 127)",
      y: "rgb(127, 255, 127)",
      z: "rgb(127, 127, 255)",
      r: "rgb(127, 127, 127)",
      dx: "rgb(255, 127, 127)",
      dy: "rgb(127, 255, 127)",
      dz: "rgb(127, 127, 255)",
      w: "rgb(127, 127, 127)",
      roll: "rgb(255, 127, 127)",
      pitch: "rgb(127, 255, 127)",
      throttle: "rgb(127, 127, 255)",
      yaw: "rgb(127, 127, 127)",
      white: "#fff",
    };
    const <%= title %>Chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: listByKey("t"),
        datasets: keys.map(key => ({
          label: labels[key],
          fill: false,
          borderColor: colors[key],
          pointBorderColor: colors[key],
          pointBackgroundColor: colors.white,
          pointHoverBackgroundColor: colors[key],
          pointHoverBorderColor: colors.white,
          data: listByKey(key).map(val => val * ("rw".includes(key) ? 0.1 : 1)),
        }))
      },
    });
  }
  </script>
<% end %>
