<% url = nil if local_assigns[:url].nil? %>
<div class="columns">
  <div class="column col-7" style="padding:15px;">
    <h3>
      <%= id %>. <%= title %>
    </h3>
  </div>
  <div class="column col-5" style="margin-top:30px;padding:15px;">
    <% unless url.nil? %>
      <a href="<%= url %>" class="btn btn-block btn-danger">Delete</a>
    <% end %>
  </div>
</div>