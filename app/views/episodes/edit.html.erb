<div class="columns">
  <div class="column col-12" style="padding:15px;">
    <h3>
      <a href="/episodes/<%=@episode.id%>" class="btn btn-link zmdi zmdi-chevron-left" style="padding:0px;"></a>
      Edit Episode #<%=@episode.id%>
    </h3>
  </div>
</div>
<div class="divider"></div>
<div class="columns">
  <div class="column col-12" style="padding:15px;">
    <form action="/episodes/<%=@episode.id%>" method="POST">
      <!-- name:string -->
      <div class="form-group">
        <label class="form-label" for="name" style="font-weight:bold;padding:5px 0px;">Name</label>
        <input class="form-input" type="text" id="name" name="name" placeholder="Name of Episode" value="<%=@episode.name%>"/>
      </div>
      
      <!-- timestep:integer -->
      <div class="form-group">
        <label class="form-label" for="timestep" style="font-weight:bold;padding:5px 0px;">Timestep in milliseconds >= 10ms</label>
        <input class="form-input" type="number" id="timestep" name="timestep" placeholder="Valid : 40 ~ 200ms" value="200"/>
      </div>
      
      <!-- control_points:JSON -->
      <div class="form-group">
        <label class="form-label" for="control_points" style="font-weight:bold;padding:5px 0px;">Control Points in JSON</label>
        <textarea class="form-input" id="control_points" name="control_points" placeholder="Invalid JSON will be ignored" rows="30"><%= JSON.pretty_generate(JSON.parse(@episode.control_points)) -%></textarea>
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
        <button class="btn btn-link" type="reset">Reset</button>
      </div>
    </form>
  </div>
</div>
