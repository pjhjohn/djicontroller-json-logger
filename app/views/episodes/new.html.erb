<div class="columns">
  <div class="column col-12" style="padding:15px;">
    <h3>
      <a href="/episodes" class="btn btn-link zmdi zmdi-chevron-left" style="padding:0px;"></a>
      New Episode
    </h3>
  </div>
</div>
<div class="divider"></div>
<div class="columns">
  <div class="column col-12" style="padding:15px;">
    <form action="/episodes" method="POST">
      <!-- name:string -->
      <div class="form-group">
        <label class="form-label" for="name" style="font-weight:bold;padding:5px 0px;">Name</label>
        <input class="form-input" type="text" id="name" name="name" placeholder="Name of Episode"/>
      </div>
      
      <!-- timestep:integer -->
      <div class="form-group">
        <label class="form-label" for="timestep" style="font-weight:bold;padding:5px 0px;">Timestep in milliseconds (40 ~ 200ms)</label>
        <input class="form-input" type="number" id="timestep" name="timestep" placeholder="Valid : 40 ~ 200ms" min="40" max="200" value="200"/>
      </div>
      
      <!-- states:JSON -->
      <div class="form-group">
        <label class="form-label" for="states" style="font-weight:bold;padding:5px 0px;">States in JSON</label>
        <textarea class="form-input" id="states" name="states" placeholder="Invalid JSON will be ignored" rows="30"></textarea>
      </div>
      
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
        <button class="btn btn-link" type="reset">Reset</button>
      </div>
    </form>
  </div>
</div>
